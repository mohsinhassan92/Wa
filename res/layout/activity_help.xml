<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/bg" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg"
        android:padding="20dp" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/logo"
            android:layout_marginBottom="10dp"
            android:background="#0876BC" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Servicecentrum"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0876BC" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:textColor="@color/text_color"
            android:text="Het Servicecentrum is dÃ© plek binnen Vogelbescherming Nederland waar u terecht kunt met al uw vragen en opmerkingen over vogels, het beschermen van vogels, onze Vereniging, de ledenadministratie, onze winkel en postorderbestellingen. Wij doen ons best u zo snel mogelijk te antwoorden. Kijkt u eerst eens verder op deze site. Veel informatie, waarmee uw vragen mogelijk al beantwoord worden, vindt u bij de vragen en antwoorden."
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:textColor="@color/text_color"
            android:layout_marginBottom="10dp"
            android:text="Staat uw vraag er niet bij, belt u ons dan of neem contact met ons op."
            android:textSize="@dimen/text_size" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_below="@id/text3"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="#0876BC" />
    </RelativeLayout>

</ScrollView>