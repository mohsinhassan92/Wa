<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/bg" 
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/logo"
            android:layout_marginBottom="10dp"
            android:background="#0876BC" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Partners van Vogelbescherming Nederland"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0876BC" />


        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_below="@id/text1"
            android:layout_marginBottom="10dp"
            android:text="Meerdere bedrijven en instellingen steunen het werk van Vogelbescherming. Hieronder vindt u een overzicht van onze partners: organisaties met een hart voor vogels waar wij intensief mee samenwerken."
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_below="@id/text2"
            android:layout_marginBottom="10dp"
            android:text="Ook Ãºw bedrijf kan een bijdrage leveren aan de bescherming van vogels en hun leefgebieden. Van eenmalige donatie tot joint promotion."
            android:textSize="@dimen/text_size"/>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/text3"
            android:background="#0876BC" />
        
        <ImageView android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:layout_width="match_parent"
            android:src="@drawable/partners"/>
        </RelativeLayout>

</ScrollView>